<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="   쓰레기통 ID"
        android:layout_marginTop="150dp"
        android:textSize="30dp"
        android:textColor="#000000"
        android:id="@+id/textView_main_name" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/editText_main_name"
        android:textSize="20dp"
        android:layout_marginTop="20dp"
        android:textColor="#000000"
        android:singleLine="true"
        android:hint="쓰레기통 ID를 입력하세요."/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="   주소"
        android:layout_marginTop="30dp"
        android:textSize="30dp"
        android:textColor="#000000"
        android:id="@+id/textView_main_country" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:hint="쓰레기통 주소를 입력하세요."
        android:layout_marginTop="20dp"
        android:textColor="#000000"
        android:singleLine="true"
        android:id="@+id/editText_main_country" />


    <TextView
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:textColor="#000000"
        android:id="@+id/textView_main_result" />

    <Button
        android:layout_width="190dp"
        android:layout_height="45dp"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:paddingLeft="8dp"
        android:textSize="17dp"
        android:background="@drawable/shape2"
        android:text="쓰레기통 등록"
        android:id="@+id/button_main_insert" />



</LinearLayout>
